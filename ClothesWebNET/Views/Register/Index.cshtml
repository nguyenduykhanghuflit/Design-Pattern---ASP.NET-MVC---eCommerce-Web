

@model ClothesWebNET.Models.Users

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container {
        margin-top: 200px;
    }
</style>

@Styles.Render("~/Content/register")
<div class="container">
    <div class="form-login form-login-cus">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <p class="heading">đăng ký tài khoản</p>
            <div class="heading-login-with">Đăng ký để dễ dàng mua sắm hơn </div>
            <div class="login-box-cus">
                @if (ViewBag.ErrorMessage != null)
                {
                    <span class="text-danger">@ViewBag.ErrorMessage</span>

                }
                <div class="header-box login-box">
                    <div class="form-control">
                        @Html.EditorFor(model => model.fullName, new { htmlAttributes = new { @class = "modal-form-input", @placeholder = "Họ và tên", @required = "true" } })
                        @Html.ValidationMessageFor(model => model.fullName, "", new { @class = "text-danger" })

                    </div>

                    @if (ViewBag.ErrDetail != null)
                    {
                        <span class="text-danger">@ViewBag.ErrDetail</span>

                    }
                    <div class="form-control">
                        @*  @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "modal-form-input", @placeholder = "Username" } })*@
                        <input type="text" required name="username" class="modal-form-input" autocomplete="off" placeholder="Tên đăng nhập" />
                        @if (ViewBag.UsernameErr != null)
                        {
                            <span class="text-danger">@ViewBag.UsernameErr</span>

                        }
                    </div>

                    <div class="form-control">
                        <input type="text" required name="password" class="modal-form-input" autocomplete="off" placeholder="Mật khẩu" />
                        @if (ViewBag.PasswordErr != null)
                        {
                            <span class="text-danger">@ViewBag.PasswordErr</span>

                        }

                    </div>

                    <div class="form-control">
                        @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "modal-form-input", @placeholder = "SĐT", @required = "true" } })
                        @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-control">
                        @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "modal-form-input", @placeholder = "Địa chỉ", @required = "true" } })
                        @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })

                    </div>
                    <div class="recapcha">
                        This site is protected by reCAPTCHA and the Google
                        <a class="recapcha-link" href="">Privacy Policy</a> and
                        <a class="recapcha-link" href="">Terms of Service</a> apply.
                    </div>
                    <button type="submit" class="button-register  button-hover">
                        ĐĂNG KÝ
                    </button>
                    <div class="modal-help">
                        Đã có tài khoản?
                        <div style="display: inline; cursor: pointer"
                             id="modal-login"
                             class="modal-link">
                            Đăng nhập
                        </div>
                    </div>
                    <div class="modal-help">
                        Quên mật khẩu?
                        <div style="display: inline; cursor: pointer"
                             id="modal-reset-password"
                             class="modal-link">
                            Khôi phục mật khẩu
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
@Scripts.Render("~/bundles/admin/jquery")
<script>
    $('#modal-login').click(() => {
        window.location.href = '/login'
    })
</script>
