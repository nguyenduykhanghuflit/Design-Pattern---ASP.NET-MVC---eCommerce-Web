﻿@model IEnumerable<ClothesWebNET.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- database jquery -->
<link rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/v/bs5/jq-3.6.0/jszip-2.5.0/dt-1.11.5/b-2.2.2/b-html5-2.2.2/b-print-2.2.2/datatables.min.css" />
<div id="content" class="">

    <div class="content-main p-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Sản phẩm</li>
                <li class="breadcrumb-item active" aria-current="page">
                    Tất cả sản phẩm
                </li>
            </ol>
        </nav>
        <div class="table-responsive-sm">
            <table id="table-product" class="table table-sm" style="width: 100%">
                <thead>
                    <tr>

                        <th>STT</th>
                        <th style="display:none">ID</th>
                        <th>Tên sản phẩm</th>
                        <th>Hình ảnh</th>
                        <th>Danh mục</th>
                        <th>Giá</th>
                        <th>Size38</th>
                        <th>Size39</th>
                        <th>Size40</th>
                        <th>Size41</th>
                        <th>Size42</th>
                      

                        <th style="overflow: hidden; font-size: 0"></th>
                        <th style="overflow: hidden; font-size: 0"></th>
                        <th style="display: none; font-size: 0"></th>
                        <th style="display: none; font-size: 0"></th>

                    </tr>
                </thead>
                <tbody id="renderData">
                    @{int stt = 1; }
                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>@stt</td>
                        <td style="display:none">@item.idProduct</td>
                        <td>@item.nameProduct</td>
                        <td>
                            <img src="@item.ImageProduct.First().URLImage" width="70"
                                 height="70" />
                        </td>
                        <td>@item.Types.nameType</td>
                        <td>
                            @item.price
                        </td>
                        <td>
                            @item.size38
                        </td>
                        <td>
                            @item.size39
                        </td>
                        <td>
                            @item.size40
                        </td>
                        <td>
                            @item.size41
                        </td>
                        <td>
                            @item.size42
                        </td>

                        <td>
                            <button type="button" class="btn btn-update btn-w-100 btn-outline-primary">
                                Cập nhật
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-delete btn-w-80 btn-outline-danger">
                                Xóa
                            </button>
                        </td>
                        <td style="display:none">
                            <img src="@item.ImageProduct.First().URLImage" width="70"
                                 height="70" />
                        </td>
                        <td style="display:none">
                            <img src="@item.ImageProduct.Last().URLImage" width="70"
                                 height="70" />
                        </td>

                    </tr>
                        stt++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@*Modal cập nhật*@
<div class="modal-cus modal-update">
    <div class="modal__overplay"></div>
    <div  class="modal__body">
        <div class="modal__inner">
            <div  class="cus-form">
                <h2>Cập nhật sản phẩm </h2>
                <form method="post" action="/Admin/Products/edit" enctype="multipart/form-data" class="row g-3">
                    @Html.AntiForgeryToken()
                    <!-- ID -->
                    <div style="display:none" class="col-md-12">
                        <label for="validationDefault01" class="form-label">ID</label>
                        <input type="text"
                               name="idProduct"
                               readonly
                               class="form-control pid"
                               id="validationDefault01"
                               required />
                    </div>
                    <!-- nameProduct -->
                    <div class="col-md-12">
                        <label for="validationDefault01" class="form-label">Tên sản phẩm</label>
                        <input type="text"
                               name="nameProduct"
                               class="form-control pname"
                               id="validationDefault01"
                               required />
                    </div>
                    <!-- type -->
                    <div class="col-md-12">
                        <label for="validationDefault04" class="form-label">Danh mục</label>
                        <select class="form-select ptype" name="idType" id="renderSelect" required>
                        </select>
                    </div>
                    <div class="col-md-2 ">
                        <label for="validationDefault01" class="form-label">Size38</label>
                        <input type="number"
                               name="size38"
                               min="1"
                               class="form-control pm"
                               id="validationDefault01"
                               required />
                    </div>
                    <div class="col-md-2 ">
                        <label for="validationDefault01" class="form-label">Size39</label>
                        <input type="number"
                               name="size39"
                               min="1"
                               class="form-control pm"
                               id="validationDefault01"
                               required />
                    </div>
                    <div class="col-md-2 ">
                        <label for="validationDefault01" class="form-label">Size40</label>
                        <input type="number"
                               name="size40"
                               min="1"
                               class="form-control pm"
                               id="validationDefault01"
                               required />
                    </div>
                    <div class="col-md-2 ">
                        <label for="validationDefault01" class="form-label">Size41</label>
                        <input type="number"
                               name="size41"
                               min="1"
                               class="form-control pm"
                               id="validationDefault01"
                               required />
                    </div>
                    <div class="col-md-2 ">
                        <label for="validationDefault01" class="form-label">Size42</label>
                        <input type="number"
                               name="size42"
                               min="1"
                               class="form-control pm"
                               id="validationDefault01"
                               required />
                    </div>
                    <!-- sizeM -->
                    <div class="col-md-4 d-none">
                        <label for="validationDefault01" class="form-label">SizeM</label>
                        <input type="number"
                               name="sizeM"
                               min="1"
                               value="10"
                               class="form-control pm"
                               id="validationDefault01"
                               required />
                    </div>
                    <!-- sizeL -->
                    <div class="col-md-4 d-none">
                        <label for="validationDefault01" class="form-label">SizeL</label>
                        <input type="number"
                               name="sizeL"
                               value="10"
                               min="1"
                               class="form-control pl"
                               id="validationDefault01"
                               required />
                    </div>
                    <!-- sizeXl -->
                    <div class="col-md-4 d-none">
                        <label for="validationDefault01" class="form-label">SizeXL</label>
                        <input type="number"
                               name="sizeXL"
                               value="10"
                               min="1"
                               class="form-control pxl"
                               id="validationDefault01"
                               required />
                    </div>
                    <!-- price -->
                    <div class="col-md-12">
                        <label for="validationDefault01" class="form-label">Giá bán</label>
                        <input type="number"
                               name="price"
                               min="150"
                               max="900"
                               class="form-control pprice"
                               id="validationDefault01"
                               required />
                    </div>
                    <div class="col-md-6">
                        <label for="validationDefault01" class="form-label">Hình ảnh 1</label>
                        <input type="file"
                               name="img1"
                               class="form-control URLimg1"
                               id="validationDefault01"
                               accept="image/png, image/gif, image/jpeg"
                               required />
                    </div>
                    <div class="col-md-6">
                        <label for="validationDefault01" class="form-label">Hình ảnh 2</label>
                        <input type="file"
                               name="img2"
                               class="form-control URLimg2"
                               id="validationDefault01"
                               accept="image/png, image/gif, image/jpeg"
                               required />
                    </div>

                    <!-- description -->
                    <div class="col-md-12">
                        <label for="validationDefault01" class="form-label">Mô tả</label>
                        <input type="text"
                               name="description"
                               class="form-control pdes"
                               id="validationDefault01"
                               required />
                    </div>

                    <div class="col-12">
                        <button class="btn btn-primary" type="submit">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@Scripts.Render("~/bundles/admin/jquery")

<script>
    $('.sp ul').addClass('show');
    $('.allsp').addClass('active');
</script>

<!-- database jquery -->
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script type="text/javascript"
        src="https://cdn.datatables.net/v/bs5/jq-3.6.0/jszip-2.5.0/dt-1.11.5/b-2.2.2/b-html5-2.2.2/b-print-2.2.2/datatables.min.js"></script>





@Scripts.Render("~/bundles/admin/allproduct")
<script>

    fetch('/collections/GetCategory')
        .then((response) => response.json())
        .then((data) => {

            let category = $('#renderSelect');
            let cate = `<option selected disabled value="">Chọn</option>`

            data.forEach(item => {
                cate += ` <option value="${item.idType}">${item.nameType}</option>`


            })

            category.html(cate);

        });

</script>